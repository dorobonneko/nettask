<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:id="@+id/coordinatorlayout"
	android:background="@drawable/background"
	android:fitsSystemWindows="true">

	<include layout="@layout/app_bar_layout"/>
	<ScrollView
		app:layout_behavior="@string/appbar_scrolling_view_behavior"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:fillViewport="true">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="horizontal"
			android:focusableInTouchMode="true"
			android:focusable="true">
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical"
				android:layout_weight="1"
				>
			<!--<View
				android:background="?android:attr/listDivider"
				android:layout_height="1dp"
				android:layout_width="match_parent"/>
-->
			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:minHeight="?attr/listPreferredItemHeightSmall">

				<TextView
					android:layout_marginStart="?attr/cellSpacing"
					android:id="@+id/id_name0"
					android:textColor="?android:attr/textColorPrimary"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="名称:"
					android:layout_alignParentStart="true"
					android:layout_centerVertical="true"/>

				<EditText
					android:layout_centerVertical="true"
					android:layout_toEndOf="@id/id_name0"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"/>

			</RelativeLayout>

			<View
				android:layout_marginStart="?attr/cellSpacing"
				android:background="?android:attr/listDivider"
				android:layout_height="1dp"
				android:layout_width="match_parent"/>

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:minHeight="?attr/listPreferredItemHeightSmall">

				<TextView
					android:layout_marginStart="?attr/cellSpacing"
					android:id="@+id/id_name1"
					android:textColor="?android:attr/textColorPrimary"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="重复:"
					android:layout_alignParentStart="true"
					android:layout_centerVertical="true"/>

				<Spinner
					android:layout_centerVertical="true"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:entries="@array/days"
					android:layout_alignParentEnd="true"
					/>

			</RelativeLayout>

			<View
				android:layout_marginStart="?attr/cellSpacing"
				android:background="?android:attr/listDivider"
				android:layout_height="1dp"
				android:layout_width="match_parent"/>

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:minHeight="?attr/listPreferredItemHeightSmall">

				<TextView
					android:layout_marginStart="?attr/cellSpacing"
					android:id="@+id/id_name2"
					android:textColor="?android:attr/textColorPrimary"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="选择任务:"
					android:layout_alignParentStart="true"
					android:layout_centerVertical="true"/>

				<TextView
					android:id="@+id/select_task"
					android:paddingStart="?attr/cellSpacing"
					android:layout_centerVertical="true"
					android:layout_toEndOf="@id/id_name2"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"/>

				<ImageView
					android:layout_centerVertical="true"
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					app:srcCompat="@drawable/chevron_right"
					android:layout_alignParentEnd="true"
					android:layout_marginEnd="12dp"/>

			</RelativeLayout>

			<View
				android:layout_marginStart="?attr/cellSpacing"
				android:background="?android:attr/listDivider"
				android:layout_height="1dp"
				android:layout_width="match_parent"/>

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:minHeight="?attr/listPreferredItemHeightSmall">

				<TextView
					android:layout_marginStart="?attr/cellSpacing"
					android:id="@+id/id_name3"
					android:textColor="?android:attr/textColorPrimary"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="备注:"
					android:layout_alignParentStart="true"
					android:layout_centerVertical="true"/>

				<EditText
					android:layout_centerVertical="true"
					android:layout_toEndOf="@id/id_name3"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"/>

			</RelativeLayout>

			<View
				android:layout_marginStart="?attr/cellSpacing"
				android:background="?android:attr/listDivider"
				android:layout_height="1dp"
				android:layout_width="match_parent"/>

			<View
				android:layout_weight="1"
				android:layout_width="1px"
				android:layout_height="wrap_content"/>
			</LinearLayout>
			<LinearLayout
				android:layout_marginStart="15dp"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical"
				android:layout_weight="1">
			
			<TextView
				android:textColor="?android:attr/textColorSecondary"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="设定时间"
				android:gravity="center"/>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

				<com.moe.network.tasker.widget.NumberPickerView
					android:id="@+id/hour"
					android:layout_height="match_parent"
					android:layout_width="wrap_content"
					android:layout_weight="1"/>

				<com.moe.network.tasker.widget.NumberPickerView
					android:id="@+id/minute"
					android:layout_height="match_parent"
					android:layout_width="wrap_content"
					android:layout_weight="1"/>

				<com.moe.network.tasker.widget.NumberPickerView
					android:id="@+id/second"
					android:layout_height="match_parent"
					android:layout_width="wrap_content"
					android:layout_weight="1"/>

			</LinearLayout>
			</LinearLayout>
		</LinearLayout>

	</ScrollView>

</android.support.design.widget.CoordinatorLayout>

